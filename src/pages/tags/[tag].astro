---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';
import SectionTitle from '@/components/SectionTitle.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

const pageTitle = `Etiqueta: ${tag}`;
const pageDescription = `Todos los posts con la etiqueta ${tag}`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class='mt-5'>
    <SectionTitle nameSection={tag} />
  </div>
  <section class='grid grid-cols-2 gap-4 justify-center items-start mt-5'>
    {
      posts.map((post) => (
        <BlogPost
          url={`/posts/${post.slug}/`}
          title={post.data.title}
          img={post.data.image.url}
          alt={post.data.image.alt}
        />
      ))
    }
  </section>
</BaseLayout>
