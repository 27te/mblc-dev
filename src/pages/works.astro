---
import Panda from '@/components/Panda.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import SectionTitle from '../components/SectionTitle.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('posts');
---

<BaseLayout pageTitle='Trabajos'>
  <Panda />
  <SectionTitle nameSection='Trabajos' />
  <section class='grid grid-cols-2 gap-4 justify-center items-start mt-5'>
    {
      allPosts.map((post) => (
        <div class='flex flex-col'>
          <BlogPost
            url={`/posts/${post.slug}/`}
            title={post.data.title}
            img={post.data.image.url}
            alt={post.data.image.alt}
          />
          {/* <p class='text-white text-center mt-2'>{post.data.description}</p> */}
        </div>
      ))
    }
  </section>
</BaseLayout>
